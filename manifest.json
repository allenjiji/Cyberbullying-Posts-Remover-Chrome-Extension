{
    "name": "BullCy",
    "description": "Its just an extension",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "logo.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "logo.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "webRequestBlocking",
        "tabs","webRequest",
        "https://*/*",
        "http://*/*",
        "<all_urls>"
    ],
    "web_accessible_resources": ["site_specific_scripts/*"]
}